<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shopping_recycle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        ></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/dp_45"
        >
        <CheckBox
            android:id="@+id/gouwuche_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/num_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            android:text="总计:"
            />
        <TextView
            android:id="@+id/num_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_12"
            android:textColor="#ff0606"
            />
        <LinearLayout
            android:layout_width="@dimen/dp_118"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_120"
            android:background="#ff5e70"
            >
            <TextView
                android:id="@+id/sum_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="结算"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="16dp"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>