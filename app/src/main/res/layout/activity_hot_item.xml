<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="@dimen/dp_151"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_hot"
    android:outlineSpotShadowColor="#999999"
    android:layout_margin="@dimen/dp_5"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/hot_pager_item_childener"
        android:layout_width="@dimen/dp_131"
        android:layout_height="@dimen/dp_102"
        />
    <TextView
        android:id="@+id/hot_text_title_childener"
        android:layout_width="@dimen/dp_85"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_below="@id/hot_pager_item_childener"
        android:layout_marginTop="@dimen/dp_12"
        />
    <TextView
        android:id="@+id/hot_text_price_childener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hot_text_title_childener"
        android:layout_marginTop="@dimen/dp_5"
        android:textSize="@dimen/sp_14"
        android:textColor="#ff0000"
        />

    <TextView
        android:id="@+id/seller_item_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_below="@id/hot_text_title_childener"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_20"
        />





</RelativeLayout>