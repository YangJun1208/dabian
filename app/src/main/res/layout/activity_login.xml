<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.bwei.dabian.utils.NoScrollViewPager
        android:id="@+id/viewpage_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></com.bwei.dabian.utils.NoScrollViewPager>

    <RadioGroup
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@mipmap/bg_homepage_bottom"
        >
        <RadioButton
            android:layout_width="@dimen/dp_30"
            android:gravity="center"
            android:button="@null"
            android:layout_height="@dimen/dp_27"
            android:layout_marginLeft="@dimen/dp_20"
            android:id="@+id/radio1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/drawable_shouye"
            />
        <RadioButton
            android:layout_width="@dimen/dp_35"
            android:button="@null"
            android:gravity="center"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_30"
            android:id="@+id/radio2"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/drawable_quanzi"
            />
        <RadioButton
            android:layout_width="@dimen/dp_65"
            android:button="@null"
            android:gravity="center"
            android:layout_height="@dimen/dp_60"
            android:id="@+id/radio3"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_34"
            android:background="@mipmap/tab_gouwuche"
            />
        <RadioButton
            android:layout_width="@dimen/dp_30"
            android:button="@null"
            android:gravity="center"
            android:layout_height="@dimen/dp_30"
            android:id="@+id/radio4"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_35"
            android:background="@drawable/drawable_ding"
            />
        <RadioButton
            android:layout_width="@dimen/dp_30"
            android:button="@null"
            android:gravity="center"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/radio5"
            android:background="@drawable/drawable_wode"
            />

    </RadioGroup>


</RelativeLayout>