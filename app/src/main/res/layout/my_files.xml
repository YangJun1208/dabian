<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="我的资料"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_40"
        android:textColor="#666666"
        />
    <RelativeLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_138"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:background="@drawable/drawer_selector"
        android:layout_below="@id/textView_file"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_43"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_below="@id/textView_file"
        android:text="我的头像"
        android:textSize="@dimen/sp_14"
        android:textColor="#999999"
        />
    <ImageView
        android:id="@+id/image_files"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:background="@mipmap/touxiang_wdf"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_below="@id/textView_file"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_50"
        />
    <View
        android:id="@+id/view1_lines"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@id/image_files"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_40"
        />
    <TextView
        android:id="@+id/text_nicheng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的昵称"
        android:layout_below="@id/view1_lines"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_60"
        android:textSize="@dimen/sp_14"
        android:textColor="#999999"
        />
    <TextView
        android:id="@+id/files_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="#999999"
        android:layout_below="@id/image_files"
        android:text="小姐姐"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_40"
        />
    <View
        android:id="@+id/view2_lines"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@id/text_nicheng"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_40"
        />
    <TextView
        android:id="@+id/text_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的密码"
        android:layout_below="@id/view2_lines"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_60"
        android:textSize="@dimen/sp_14"
        android:textColor="#999999"
        />
    <TextView
        android:id="@+id/files_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="#999999"
        android:layout_below="@id/view2_lines"
        android:text="123456"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_40"
        />
    <View
        android:id="@+id/view3_lines"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@id/text_pwd"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_40"
        />

</RelativeLayout>