<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/intent_hao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号"
        />
    <TextView
        android:id="@+id/order_coding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/intent_hao"
        android:layout_marginLeft="@dimen/dp_5"
        />
    <TextView
        android:id="@+id/order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_5"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/order_ding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/intent_hao"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/intent_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="共0件商品,"
        android:textSize="@dimen/sp_12"
        android:layout_below="@id/order_ding"
        android:layout_toLeftOf="@id/intent_sum_price"
        />
    <TextView
        android:id="@+id/intent_sum_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="需付款0元"
        android:textSize="@dimen/sp_12"
        android:layout_alignParentRight="true"
        android:layout_below="@id/order_ding"
        />
    <Button
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/intent_sum_price"
        android:text="取消订单"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/button_intent"
        />

    <Button
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/intent_sum_price"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_pay"
        android:text="去支付"
        android:textSize="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/colorWhite"
        />


</RelativeLayout>