<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="@dimen/dp_312"
    android:layout_height="@dimen/dp_118"
    android:background="@drawable/selector_hot"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/imageView_purple"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_98"
        />
    <TextView
        android:id="@+id/title_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_12"
        android:maxLines="2"
        android:textColor="#666666"
        android:layout_toRightOf="@id/imageView_purple"
        />
    <TextView
        android:id="@+id/price_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:textColor="#ff0000"
        android:textSize="@dimen/sp_14"
        android:layout_marginBottom="@dimen/dp_13"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/imageView_purple"
        />
</RelativeLayout>