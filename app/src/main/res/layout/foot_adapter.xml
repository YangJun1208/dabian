<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_5">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/foot_shap"
        android:padding="@dimen/dp_10"
        >

        <ImageView
            android:id="@+id/foot_image"
            android:layout_width="@dimen/dp_131"
            android:layout_height="@dimen/dp_102" />

        <TextView
            android:id="@+id/foot_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foot_image"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="1111"
            android:textColor="#666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/foot_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foot_title"
            android:textColor="#f00"
            android:text="1111"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/foot_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_below="@id/foot_title"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/foot_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foot_count"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            />

    </RelativeLayout>
</RelativeLayout>