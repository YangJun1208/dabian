<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/pwd_old_files"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旧密码"
        android:textSize="@dimen/sp_12"
        app:layout_constraintTop_toTopOf="@id/fiels_old_pwd"
        app:layout_constraintBottom_toBottomOf="@id/fiels_old_pwd"
        />
    <EditText
        android:id="@+id/fiels_old_pwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/pwd_old_files"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_40"
        android:textSize="@dimen/sp_12"
        />

    <TextView
        android:id="@+id/pwd_new_files"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新密码"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@id/fiels_old_pwd"
        />
    <EditText
        android:id="@+id/fiels_new_pwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/pwd_new_files"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fiels_old_pwd"
        android:layout_marginRight="@dimen/dp_40"
        android:textSize="@dimen/sp_12"
        />


</android.support.constraint.ConstraintLayout>